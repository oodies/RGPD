{% trans_default_domain 'application' %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ 'legal_notice.header_title'|trans }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        section {
            margin-top: 20px;
        }

        section > h3:first-child {
            color: firebrick;
        }
    </style>
</head>
<body>
<div class="container">

    <h1>{{ 'legal_notice.title'|trans }}</h1>
    <p>2 / 3 - Remplisser le formulaire et générer !</p>
    <a type="button" href="{{ path('app_legal_notice_pre_generator') }}" class="btn btn-secondary">Précédent</a>
    {{ form_start(form, {'attr' : { 'novalidate':'novalidate'}} ) }}
    <section>
        <h3>{{ 'legal_notice.website_section.label'|trans }}</h3>
        <div class="form-group">
            {{ form_label(form.domain) }}
            {{ form_widget(form.domain, {'attr': {'class': 'form-control', 'aria-describedby':'domainHelp' }} ) }}
            <small id="domainHelp" class="form-text text-muted">{{ 'legal_notice.website_section.help'|trans }}</small>
        </div>
    </section>
    <section>
        <h3>{{ 'legal_notice.owner_section.label'|trans }}</h3>
        {% if legalNoticeParameters.isSociety == false %}
            <div class="form-group">
                    {{ form_label(form.individual_owner_lastname) }}
                    {{ form_widget(form.individual_owner_lastname, {'attr': {'class': 'form-control'}} ) }}
                </div>
            <div class="form-group">
                    {{ form_label(form.individual_owner_firstname) }}
                    {{ form_widget(form.individual_owner_firstname, {'attr': {'class': 'form-control'}} ) }}
                </div>
        {% endif %}
        {% if legalNoticeParameters.isSociety == true %}
            <div class="form-group">
                     {{ form_label(form.society_owner_name) }}
                    {{ form_widget(form.society_owner_name, {'attr': {'class': 'form-control'}} ) }}
                </div>
            <div class="form-group">
                    {{ form_label(form.society_entity_type) }}
                    {{ form_widget(form.society_entity_type, {'attr': {'class': 'form-control'}} ) }}
                </div>
        {% endif %}
    </section>
    <section>
        <h3>{{ 'legal_notice.owner_address_section.label'|trans }}</h3>
        <div class="form-group">
            {{ form_label(form.owner_streetAddress) }}
            {{ form_widget(form.owner_streetAddress, {'attr': {'class': 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.owner_postalCode) }}
            {{ form_widget(form.owner_postalCode, {'attr': {'class': 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.owner_addressLocality) }}
            {{ form_widget(form.owner_addressLocality, {'attr': {'class': 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.owner_addressCountry) }}
            {{ form_widget(form.owner_addressCountry, {'attr': {'class': 'form-control' }} ) }}
        </div>
    </section>
    <section>
        <h3>{{ 'legal_notice.owner_contact_details_section.label'|trans }}</h3>
        <p></p>
        <div class="form-group">
            {{ form_label(form.owner_email) }}
            {{ form_widget(form.owner_email, {'attr': {'class': 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.owner_phone) }}
            {{ form_widget(form.owner_phone, {'attr': {'class': 'form-control' }} ) }}
        </div>
    </section>
    <section>
        <h3>{{ 'legal_notice.publication_officer_section.label'|trans }}</h3>
        <div class="form-group">
            {{ form_label(form.publication_officer_lastname) }}
            {{ form_widget(form.publication_officer_lastname, {'attr': {'class': 'form-control' }} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.publication_officer_firstname) }}
            {{ form_widget(form.publication_officer_firstname, {'attr': {'class': 'form-control' }} ) }}
        </div>
    </section>
    {% if(legalNoticeParameters.isRCS or legalNoticeParameters.isRM) %}
        <section>
            <h3>{{ 'legal_notice.duns_section.label'|trans }}</h3>
            <p>{{ 'legal_notice.duns_section.question'|trans }}</p>
            {% if(legalNoticeParameters.isRCS) %}
                <div class="form-group">
            {{ form_label(form.duns_rcs) }}
            {{ form_widget(form.duns_rcs, {'attr': {'class': 'form-control', 'placeholder' : 'legal_notice.duns_rcs.placeholder'|trans }} ) }}
        </div>
            {% endif %}
            {% if(legalNoticeParameters.isRM) %}
                <div class="form-group">
            {{ form_label(form.duns_rm) }}
            {{ form_widget(form.duns_rm, {'attr': {'class': 'form-control', 'placeholder' : 'legal_notice.duns_rm.placeholder'|trans }} ) }}
        </div>
            {% endif %}
        </section>
    {% endif %}

    {% if(legalNoticeParameters.isCapitalSocial) %}
        <section>
            <h3>{{ 'legal_notice.capital_section.label'|trans }}</h3>
            <p>{{ 'legal_notice.capital_section.question'|trans }}</p>
            <div class="form-group">
                {{ form_label(form.capital_amount) }}
                <div class="input-group">
                    {{ form_widget(form.capital_amount, {'attr': {'class': 'form-control' }} ) }}
                    <div class="input-group-append">
                        <span class="input-group-text">€ euros</span>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    {% if(legalNoticeParameters.isVatIdentifier) %}
        <section>
            <h3>{{ 'legal_notice.vat_identifier_section.label'|trans }}</h3>
            <p>{{ 'legal_notice.vat_identifier_section.question'|trans }}</p>
            <div class="form-group">
            {{ form_label(form.vat_identifier) }}
            {{ form_widget(form.vat_identifier, {'attr': {'class': 'form-control' }} ) }}
        </div>
        </section>
    {% endif %}

    {% if(legalNoticeParameters.isLicensedProfession) %}
        <section>
            <h3>{{ 'legal_notice.licensed_profession_section.label'|trans }}</h3>
            <p>{{ 'legal_notice.licensed_profession_section.question'|trans }}</p>
            <div class="form-group">
            {{ form_label(form.licensed_profession_title) }}
            {{ form_widget(form.licensed_profession_title, {'attr': {'class': 'form-control' }} ) }}
        </div>
            <div class="form-group">
            {{ form_label(form.licensed_profession_organism) }}
            {{ form_widget(form.licensed_profession_organism, {'attr': {'class': 'form-control' }} ) }}
        </div>
            <div class="form-group">
            {{ form_label(form.licensed_profession_ref) }}
            {{ form_widget(form.licensed_profession_ref, {'attr': {'class': 'form-control' }} ) }}
        </div>
            <div class="form-group">
            {{ form_label(form.licensed_profession_eu_state) }}
            {{ form_widget(form.licensed_profession_eu_state, {'attr': {'class': 'form-control' }} ) }}
        </div>
        </section>
    {% endif %}
    <section>
        <h3>{{ 'legal_notice.hosting_section.label'|trans }}</h3>
        <div class="form-group">
            {{ form_label(form.hosting_name) }}
            {{ form_widget(form.hosting_name, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_entity_type) }}
            {{ form_widget(form.hosting_entity_type, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_streetAddress) }}
            {{ form_widget(form.hosting_streetAddress, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_postalCode) }}
            {{ form_widget(form.hosting_postalCode, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_addressLocality) }}
            {{ form_widget(form.hosting_addressLocality, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_addressCountry) }}
            {{ form_widget(form.hosting_addressCountry, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_capital_amount) }}
            <div class="input-group">
                {{ form_widget(form.hosting_capital_amount, {'attr': {'class': 'form-control'}} ) }}
                <div class="input-group-append">
                    <span class="input-group-text">€ euros</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_duns_rcs) }}
            {{ form_widget(form.hosting_duns_rcs, {'attr': {'class': 'form-control', 'placeholder': 'legal_notice.hosting_duns_rcs.placeholder'|trans}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_phone) }}
            {{ form_widget(form.hosting_phone, {'attr': {'class': 'form-control'}} ) }}
        </div>
        <div class="form-group">
            {{ form_label(form.hosting_email) }}
            {{ form_widget(form.hosting_email, {'attr': {'class': 'form-control'}} ) }}
        </div>
    </section>
    {{ form_rest(form) }}
    <a type="button" href="{{ path('app_legal_notice_pre_generator') }}" class="btn btn-secondary">Précédent</a>
    <button type="submit" class="btn btn-primary">{{ 'legal_notice.validate'|trans }}</button>
    {{ form_end(form) }}
</div>
</body>
</html>
